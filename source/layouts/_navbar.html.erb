        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to "Profile", "#"%></li>
          <li><%= link_to "Dashboard", "#"%></li>
          <li><%= link_to "Log Out", "#"%></li>
          <li><%= link_to "Meet the team", "team.html"%></li>
